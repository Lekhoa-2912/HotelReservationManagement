<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_light">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_back_circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="Quay lại"
                android:src="@drawable/back"
                app:tint="#4CAF50" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhận Phòng"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/green_text_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tìm kiếm"
                    android:textColor="@color/green_text_dark"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã đặt phòng:"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/edt_reservation_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_green"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btn_search_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tìm Kiếm"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green_primary_button"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_available_rooms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/card_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh sách phòng trống"
                    android:textColor="@color/green_text_dark"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại phòng:"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="14sp"/>
                <Spinner
                    android:id="@+id/spinner_room_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/spinner_background_green"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp"
                    android:entries="@array/room_types"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng:"
                android:textColor="@color/text_dark_gray"
                android:textSize="14sp"/>
                <Spinner
                    android:id="@+id/spinner_room_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/spinner_background_green"
                    android:padding="8dp"
                    android:entries="@array/room_numbers"/> </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_check_in_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_available_rooms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin nhận phòng"
                        android:textColor="@color/green_text_dark"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ và tên:"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/et_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="admin"
                        android:inputType="textPersonName"
                        android:padding="8dp"
                        android:background="@drawable/edittext_border_green"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thẻ căn cước/ CMND:"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/et_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:inputType="number"
                        android:padding="8dp"
                        android:background="@drawable/edittext_border_green"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên phòng:"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/et_room_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phòng 105"
                        android:inputType="text"
                        android:padding="8dp"
                        android:background="@drawable/edittext_border_green"
                        android:enabled="false" android:focusable="false"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên loại phòng:"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/et_room_type_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phòng Suite (SUT)"
                        android:inputType="text"
                        android:padding="8dp"
                        android:background="@drawable/edittext_border_green"
                        android:enabled="false" android:focusable="false" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Space android:layout_width="match_parent" android:layout_height="24dp"/> <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày nhận:"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="14sp"/>
                    <LinearLayout
                        android:id="@+id/layout_check_in_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/edittext_border_green"
                        android:padding="8dp"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:id="@+id/tv_check_in_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp"
                            android:layout_marginStart="4dp"/>
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/btn_2"
                            android:contentDescription="Chọn ngày nhận"
                            android:layout_marginEnd="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày trả:"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:id="@+id/layout_check_out_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/edittext_border_green"
                        android:padding="8dp"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:id="@+id/tv_check_out_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp"
                            android:layout_marginStart="4dp"/>
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/btn_2"
                            android:contentDescription="Chọn ngày trả"
                            android:layout_marginEnd="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng người tối đa:"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/et_max_guests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:inputType="number"
                        android:padding="8dp"
                        android:background="@drawable/edittext_border_green"
                        android:enabled="false" android:focusable="false"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá:"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/et_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:background="@drawable/edittext_border_green"
                        android:enabled="false" android:focusable="false" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_functions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/layout_check_in_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:padding="8dp">

                <Button
                    android:id="@+id/btn_check_in_guest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="Check In Khách"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green_primary_button"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btn_check_out_guest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="Check Out Khách"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green_primary_button"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="Hủy"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green_primary_button"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btn_close"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="Đóng"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green_primary_button"
                    app:cornerRadius="8dp" />

            </GridLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>