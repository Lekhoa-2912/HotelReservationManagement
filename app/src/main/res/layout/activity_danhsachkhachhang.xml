<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background_light"
    android:padding="16dp">

    <!-- Title Section -->
    <TextView
        android:id="@+id/tv_title_daily_bookings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách đặt phòng trong ngày"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/green_text_dark"
        android:layout_marginBottom="16dp" />

    <!-- Table Header (outside RecyclerView) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:background="@color/green_primary_button"
        android:weightSum="6"> <!-- Tổng trọng số của các cột -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mã đặt phòng"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingHorizontal="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Họ và tên"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingHorizontal="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CMND"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingHorizontal="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loại phòng"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingHorizontal="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày nhận"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingHorizontal="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày trả"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingHorizontal="4dp"/>
    </LinearLayout>

    <!-- RecyclerView for the list of bookings -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_daily_bookings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>
